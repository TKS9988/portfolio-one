{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "functions"]
}
